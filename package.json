{
  "name": "cra-typescript-electron",
  "version": "0.1.0",
  "author": "Chris Idzerda",
  "description": "CRA Typescript Electron",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0",
    "typescript": "~3.7.2"
  },
  "build": {
    "appId": "com.example.cra-typescript-electron",
    "extends": "react-cra",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "icon": "build/favicon.ico"
    }
  },
  "homepage": ".",
  "main": "build/electron.js",
  "scripts": {
    "start": "yarn xpile && cross-env BROWSER=none DEV_URL=http://localhost:4349 PORT=4349 node start.js",
    "react-start": "cross-env PORT=4349 react-scripts start",
    "react-build": "react-scripts build",
    "electron-start": "wait-on http://localhost:4349 && electron .",
    "electron-build": "yarn xpile && electron-builder",
    "xpile": "tsc -p main",
    "test": "react-scripts test --watch --coverage",
    "release": "yarn react-build && yarn electron-build --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "eject": "react-scripts eject"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.{js,jsx,ts,tsx}",
      "!src/setupTests.js"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.4",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "cross-env": "^6.0.3",
    "electron": "^7.1.7",
    "electron-builder": "^21.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "node-sass": "^4.13.0",
    "wait-on": "^3.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
