{
  "name": "cra-typescript-electron",
  "version": "0.1.0",
  "author": "Chris Idzerda",
  "description": "CRA Typescript Electron",
  "private": true,
  "dependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-scripts": "^3.4.4"
  },
  "build": {
    "productName": "CRA Typescript Electron",
    "appId": "com.example.cra-typescript-electron",
    "extends": "react-cra",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "icon": "build/favicon.ico"
    }
  },
  "homepage": ".",
  "main": "build/electron.js",
  "scripts": {
    "start": "yarn xpile && cross-env BROWSER=none DEV_URL=http://localhost:4349 PORT=4349 node start.js",
    "react-start": "cross-env PORT=4349 react-scripts start",
    "react-build": "react-scripts build",
    "electron-start": "wait-on http://localhost:4349 && electron .",
    "electron-build": "yarn xpile && electron-builder",
    "xpile": "tsc -p main",
    "test": "react-scripts test --watch --coverage",
    "release": "yarn react-build && yarn electron-build --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "eject": "react-scripts eject"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.{js,jsx,ts,tsx}",
      "!src/setupTests.js"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.21.5",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^10.4.3",
    "@testing-library/user-event": "^12.0.11",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.14.45",
    "@types/react": "^16.14.8",
    "@types/react-dom": "^16.9.13",
    "cross-env": "^7.0.3",
    "electron": "^13.1.2",
    "electron-builder": "^22.9.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "node-sass": "^4.14.1",
    "typescript": "^4.3.4",
    "wait-on": "^5.2.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
